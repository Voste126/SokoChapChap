mixin TestimonialItem(config)
	.col-md-6.mb-4
		.card.h-100.shadow.card-span.p-3.bg-black
			.card-body
				.d-flex.align-items-center
					img.img-fluid(src=`${CWD}assets/img/gallery/${config.image}` width='80' alt="testimonials")
					.flex-1.ms-4
						h6.fs-lg-1.mb-1.text-uppercase=config.name
				p.mb-0.mt-4.fw-light.lh-lg=config.text

mixin  CustomerTestimonials
	+Section#testimonial
		.row
			.col-lg-7.mx-auto.text-center.my-5
				h5.fs-3.fs-lg-5.lh-sm.mb-0.text-uppercase what customers are saying
		.row.flex-center.h-100
			.col-xl-9
				#carouselTestimonials.carousel.slide(data-bs-ride='carousel')
					.carousel-inner
						.carousel-item.active(data-bs-interval='10000')
							.row.h-100.justify-content-center                
								+TestimonialItem(customers[0])                  
								+TestimonialItem(customers[1])                                                   
						.carousel-item(data-bs-interval='5000')
							.row.h-100.justify-content-center                
								+TestimonialItem(customers[2])                  
								+TestimonialItem(customers[1])                        
						.carousel-item
							.row.h-100.justify-content-center          
								+TestimonialItem(customers[0])
								+TestimonialItem(customers[1])                                
					.row.mt-5.flex-center
						.col-auto.position-relative.z-index-2
							ol.carousel-indicators
								li.active.mx-2(data-bs-target='#carouselTestimonials' data-bs-slide-to='0')
								li.mx-2(data-bs-target='#carouselTestimonials' data-bs-slide-to='1')
								li.mx-2(data-bs-target='#carouselTestimonials' data-bs-slide-to='2')
							